<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9FA91"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-53dp">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:fontFamily="@font/luckiestguy"
        android:shadowColor="#56DB05"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1.6"
        android:text="USTAWIENIA"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="385dp"
        android:layout_height="174dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_square"
        android:paddingLeft="-60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439">

        <TableRow
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/login"
                android:layout_width="256dp"
                android:layout_height="58dp"
                android:fontFamily="@font/luckiestguy"
                android:paddingStart="70dp"
                android:paddingTop="10dp"
                android:shadowColor="#56DB05"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="1.6"
                android:text="LOGIN:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginVIew"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/freeman"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="213dp"
                android:layout_height="58dp"
                android:fontFamily="@font/luckiestguy"
                android:paddingStart="70dp"
                android:paddingTop="10dp"
                android:shadowColor="#56DB05"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="1.6"
                android:text="IMIĘ:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imieView"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/freeman"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="256dp"
                android:layout_height="58dp"
                android:fontFamily="@font/luckiestguy"
                android:paddingStart="70dp"
                android:paddingTop="10dp"
                android:shadowColor="#56DB05"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="1.6"
                android:text="EMAIL:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailView"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/freeman"
                android:gravity="center"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <Button
        android:id="@+id/btn_Wyloguj"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/luckiestguy"
        android:text="WYLOGUJ SIĘ"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/btn_Glowna"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/luckiestguy"
        android:text="STRONA GŁÓWNA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="391dp"
        android:layout_height="151dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_square"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774">

        <TextView
            android:id="@+id/jezyk"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/luckiestguy"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:shadowColor="#56DB05"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1.6"
            android:text="ZMIEŃ JĘZYK APLIKACJI:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Polski"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/luckiestguy"
            android:text="POLSKI"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Angielski"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/luckiestguy"
            android:text="ANGIELSKI"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>